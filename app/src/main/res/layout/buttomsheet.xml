<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:id="@+id/buttomsheet222"
    tools:showIn="@layout/fragment_listfriends"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:id="@+id/friendCardView2"
        app:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/FrienCARDVIEW"
        app:cardElevation="7dp">

        <LinearLayout
            android:id="@+id/resturantLinearLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <EditText
                android:layout_width="200dp"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColorHint="#ff0821"
                android:id="@+id/editfriend"
                android:hint="@string/textfreind"
                android:alpha=".7"
                android:textColor="#19405E"
                android:layout_centerHorizontal="true"
                android:paddingRight="@dimen/_5sdp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:background="@drawable/backgroundedittext"
                />
            <Button
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:textSize="@dimen/_16sdp"
                android:id="@+id/friendrequest"
                android:textStyle="italic"
                android:textAllCaps="false"
                android:layout_below="@+id/editfriend"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/btnaddfriend"
                android:text="@string/add"
                />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>