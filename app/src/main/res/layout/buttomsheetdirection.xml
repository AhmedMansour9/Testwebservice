<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/sheetdirec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    android:layout_gravity="bottom"
    app:behavior_peekHeight="70dp"
    tools:showIn="@layout/fragment_searchplaces"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:id="@+id/friendCardView2"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/directionsimage"
                android:layout_toLeftOf="@+id/direc"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />
        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:text="@string/Direction"
             android:background="@drawable/backgroundbtndirection"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/direc"
            />

            <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:text="@string/Startdirection"
                android:background="@drawable/backgroundbtndirection"
                android:textAllCaps="false"
                android:visibility="invisible"
                android:textStyle="italic"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/dirstart"
                />
            <Button
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/exitanimate"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/exit"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>