<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_10sdp"
        android:background="@drawable/arroundedwindow"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/imgfriendss"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:id="@+id/namefriend"
            android:layout_toRightOf="@+id/imgfriendss"
            android:textColor="#009480"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/availble"
            android:layout_below="@+id/namefriend"
            android:id="@+id/namefri"
            android:layout_toRightOf="@+id/imgfriendss"
            android:textColor="#0ba38e"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:textSize="@dimen/_11sdp"
            />
    </RelativeLayout>
</RelativeLayout>