<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="gbstracking.Userlogin.MainActivity"
    android:background="@drawable/bc2">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgrect">

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/ter"
            >
        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already"
            android:textColor="#f9a3a3"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/terms2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:textColor="#09ff42"
            android:layout_toLeftOf="@id/terms"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <TextView
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createacc"
            android:typeface="serif"
            android:textColor="#DCD0C0"
            android:layout_marginTop="40dp"
            android:textSize="23dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regist"
            android:typeface="serif"
            android:textColor="#B1938B"
            android:textSize="19dp"
            android:layout_alignBottom="@+id/Welcome"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/rect"
            android:layout_marginBottom="35dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-05dp">


            <EditText
                android:id="@+id/name"
                android:layout_height="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:background="@drawable/rect1"
                android:layout_marginTop="@dimen/_110sdp"
                android:maxLength="25"
                android:paddingLeft="@dimen/_20sdp"
                android:hint="@string/name"
                android:textColorHint="#DCD0C0"
                android:textColor="#fff"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/user"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:drawablePadding="16dp">
            </EditText>
            <EditText
                android:id="@+id/email"
                android:textColor="#fff"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_height="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:background="@drawable/rect1"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:hint="@string/email"
                android:textColorHint="#DCD0C0"
                android:drawableRight="@drawable/email"
                android:paddingLeft="@dimen/_20sdp"
                android:drawablePadding="16dp"
                android:paddingTop="16dp"
                android:maxLength="35"
                android:paddingBottom="16dp">
            </EditText>

            <EditText
                android:id="@+id/pass"
                android:textColor="#fff"
                android:layout_height="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:background="@drawable/rect1"
                android:layout_marginTop="20dp"
                android:hint="@string/pas"
                android:textColorHint="#DCD0C0"
                android:maxLength="25"
                android:drawableRight="@drawable/pass"
                android:paddingLeft="@dimen/_20sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="16dp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="16dp"
                android:drawablePadding="16dp">
            </EditText>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBarr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="#06e6f2"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>


</RelativeLayout>
