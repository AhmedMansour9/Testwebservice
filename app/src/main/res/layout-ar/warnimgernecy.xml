<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gbstracking.gbstracking.Warning.warnimgernecy">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/tool"
                app:popupTheme="@style/PopupOverlay"
                android:background="#fff"
                android:layout_height="?android:attr/actionBarSize">
                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/Watningmessage"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="#747474"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/warn"
                    android:layout_marginLeft="@dimen/_20sdp"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:id="@+id/friendCardVie"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="7dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/pin"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#646464"
                        android:textStyle="italic"
                        />
                    <EditText
                        android:layout_width="@dimen/_180sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_45sdp"
                        android:background="@drawable/bcpin"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp"
                        android:textColor="#000"
                        android:id="@+id/pin"
                        android:maxLength="4"
                        android:inputType="numberPassword"
                        />
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_toLeftOf="@+id/pin"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:id="@+id/truee"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:src="@drawable/truee"
                        />
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_toLeftOf="@+id/pin"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:id="@+id/falsee"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:src="@drawable/falsee"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/bcbtnimergencybutton"
                android:text="@string/btnimergency"
                android:layout_below="@+id/friendCardVie"
                android:layout_marginTop="@dimen/_70sdp"
                android:textColor="#353434"
                android:textAllCaps="false"
                android:id="@+id/btnsendmessage"
                android:textSize="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textStyle="italic"
                android:drawableLeft="@drawable/warnicon"
                android:paddingLeft="@dimen/_15sdp"
                />


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
