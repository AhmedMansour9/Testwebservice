<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/friendCardView2"
        app:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp">


        <RelativeLayout
            android:id="@+id/resturantLinearLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/online"
                android:visibility="invisible"
                android:background="@drawable/online"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/imgfriend"
                android:src="@drawable/emptyprofile"
                android:layout_toRightOf="@+id/online"
                android:layout_marginLeft="@dimen/_5sdp"
                />


            <TextView
                android:layout_width="@dimen/_115sdp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:maxLines="2"
                android:layout_toRightOf="@+id/imgfriend"
                android:textColor="#101010"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text= ""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/textfriendd"/>

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_alignParentRight="true"
                android:id="@+id/imagedelete"
                android:src="@drawable/delete"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>