<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.NoActionBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/appheaderphoto"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/imgcam"
                android:id="@+id/imagecom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_image"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/emptyprofile"
                />

            <TextView
                android:id="@+id/texkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="#1F6ED4"
                android:alpha="0.8"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_below="@+id/person_image"
                android:paddingTop="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/bctextheader"
                />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
